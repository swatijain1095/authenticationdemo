
<div class="container">
	<h5>Roles List</h5>
	<table class="table table-striped" style="width:70%">
		<thead style="width:70%">
			<tr>
				<th>Role Name</th>
				<th>Actions</th>
			</tr>
		</thead>
		<% @roles.each do |role| %>
		<tr>
			<td>
				<%= role.name %>
			</td>			
      <td>
        <%= link_to 'Edit', edit_role_path(role)  %> |
        <%= button_to 'Delete', role_path(role), method: :delete, class: 'btn btn-link p-0 mb-1 text-primary', form: { class: 'd-inline' }  %>  
      </td>
		</tr>
		<% end %>
	</table>	
</div>

<%= link_to 'Create Role', new_role_path %><br/>